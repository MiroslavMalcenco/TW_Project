            {
                <div class="col-md-6 col-sm-6">
                    <div class="toplinks">
                        <a href="@Url.Action("Index", "Register")">Регистрация</a>
                        <a href="@Url.Action("Index", "Login")">Вход</a>
                    </div>
                </div>
            }
            else
            {
                <div class="col-md-6 col-sm-6">
                    <div class="toplinks">
                        <a href="@Url.Action("Dashboard", "Dashboard")">@authUser.Username</a>
                        <a href="@Url.Action("UserLogout", "Dashboard")">Выйти</a>
                    </div>
                </div>
            }
        }
    </div>
</div>