@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Dashboard";
}
@model Gamma.Web.Models.UserData
<div class="pageTitle">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <h1 class="page-heading">Панель управления администратора</h1>
            </div>
        </div>
    </div>
</div>
@Html.AntiForgeryToken()
<div class="inner-page">
    <div class="container">
        <div class="row">
            <div class="col-md-3 col-sm-4">
                <ul class="usernavdash">
                    <li class="active"><a href="@Url.Action("Dashboard", "Admin")"><i class="fa fa-tachometer" aria-hidden="true"></i>Панель управления</a></li>
                    <li><a href="@Url.Action("Users", "Admin", new {userId = Model.Id})"><i class="fa fa-user" aria-hidden="true"></i>Пользователи</a></li>
                    <li><a href="@Url.Action("Posts", "Admin", new {userId = Model.Id})"><i class="fa fa-laptop" aria-hidden="true"></i>Обзоры</a></li>
                    <li><a href="@Url.Action("ChangePassword", "Admin", new {userId = Model.Id})"><i class="fa fa-lock" aria-hidden="true"></i>Настройки пароля</a></li>
                    <li><a href="@Url.Action("UserLogout", "Dashboard")"><i class="fa fa-sign-out" aria-hidden="true"></i>Выход</a></li>
                </ul>
            </div>
            <div class="col-md-9 col-sm-8">
                <div class="userccount">
                    <div class="formpanel">
                        <h5>Личная информация</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="formrow">
                                    @Html.LabelFor(a => a.Username)
                                    @Html.TextBoxFor(a => a.Username, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="formrow">
                                    @Html.LabelFor(a => a.FullName)
                                    @Html.TextBoxFor(a => a.FullName, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="formrow">
                                    @Html.LabelFor(a => a.PhoneNumber)
                                    @Html.TextBoxFor(a => a.PhoneNumber, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="formrow">
                                    @Html.LabelFor(a => a.Email)
                                    @Html.TextBoxFor(a => a.Email, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<form id="logoutForm" action="@Url.Action("Logout", "Dashboard")" method="post">
    @Html.AntiForgeryToken()
</form>